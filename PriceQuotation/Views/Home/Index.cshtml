@model PriceQuotationModel
@{ 
    ViewBag.Title = "Price Quotation Calculator";
}

<!DOCTYPE html>
<html>
<head>
    <meta  name="viewport" content="width=device-width"/>
    <title>price Quotation</title>
</head>
<body>
    <h1>Price Quotation</h1>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="SubTotal">SubTotal</label>
            <input asp-for="SubTotal" />
        </div>
        <div>
            <label asp-for="DiscountPercent">DiscountPercent</label>
            <input asp-for="DiscountPercent" />
        </div>
        <div>
            <label>DiscountAmount</label>
            <input value="@ViewBag.FV.ToString("C2")" readonly />
        </div>
        <div>
            <label>Total</label>
            <input value="@ViewBag.Result.ToString("C2")" readonly />
        </div>
        <div>
            <button type="submit">Calculate</button>
            <a asp-action="index">Clear</a>
        </div>
    </form>
    

</body>
</html>